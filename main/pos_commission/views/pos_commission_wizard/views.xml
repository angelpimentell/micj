<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_pos_commission" model="ir.actions.act_window">
        <field name="name">Sales Commissions</field>
        <field name="res_model">pos.commission.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_report_order_commission" name="Sales Commissions" action="action_report_pos_commission"
              parent="point_of_sale.menu_point_rep" sequence="5"/>

    <record id="view_pos_commission_wizard" model="ir.ui.view">
        <field name="name">pos.commission.wizard.form</field>
        <field name="model">pos.commission.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Commissions">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="print" string="Download" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <report
        id="report_payment_xls"
        string="Patient Card Excel"
        model="pos.payment"
        report_type="xlsx"
        name="pos_commission.report_payment_xls"
        file="pos_commission.report_payment_xls"/>

</odoo>